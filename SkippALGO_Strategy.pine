    else if tfSel == "F6"
        stats := (modSel == "N") ? brierStatsN6 : brierStats16
    else if tfSel == "F7"
        stats := (modSel == "N") ? brierStatsN7 : brierStats17
    
    if not na(stats)
        s = array.get(stats, 0)
